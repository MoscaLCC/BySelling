extends layout
block content
    body
        div(class='pg-opt')
            div(class='container')
                div(class='row')
                    div(class='col-md-6')
                        a(href="/home")
                            h2 #{NOME}
                    div(class='col-md-6')
                        ol(class='breadcrumb')
                            li
                                a(href='/account') O meu perfil
                            li
                                a(href='/logout') Logout
        div(class='container')
            div(class='row')
                div(class='col-md-6')
                    h2 Contactos
        section(class='slice white bt bb')
            div(class='wp-section ')
                div(class='container')
                    if(status != null)
                        .alert.alert-error
                            button.close(type='button', data-dismiss='alert') Ã—
                            strong Ups!
                            |  #{status}
                    form.form-horizontal(action='/contact', method='post')
                            // Name input
                            .form-group
                                label.col-md-3.control-label(for='name') Nome
                                .col-md-9
                                    input#name.form-control(name='nome', type='text', placeholder=nome)
                            // Email input
                            .form-group
                                label.col-md-3.control-label(for='email') Email
                                .col-md-9
                                    input#email.form-control(name='email', type='text', placeholder=email)
                            // Message body
                            .form-group
                                label.col-md-3.control-label(for='assunto') Assunto
                                .col-md-9
                                    input#assunto.form-control(name='assunto', type='text', placeholder=assunto)
                            .form-group
                                label.col-md-3.control-label(for='message') Mensagem
                                .col-md-9
                                    textarea#message.form-control(name='mensagem', placeholder=mensagem, rows='5')
                            // Form actions
                            .form-group
                                .col-md-12.text-right
                                    button.btn.btn-primary.btn-lg(type='submit') Enviar
