                        a(href=FACE)
                            i(class='fa fa-facebook')
                        a(href=TWITTER)
                            i(class='fa fa-instagram')
                        a(href=SITE)
                            i(class='fa fa-globe')
                  div(class='col')
                        a(href='/contact' class='btn btn-block btn-base btn-icon fa-phone')
